<h1>Books</h1>
<table>
  <% @books.each do |book| %>
    <tr><th></th>Title</th></tr>
    <tr><th>Body</th></tr>
    <tr><td><%= book.title %></td></tr>
    <tr><td><%= book.body %></td></tr>
    
    <span><%= link_to book.show, book_path(book.id) %></span>
    <span><%= link_to book.edit, book_path(book.id) %></span>
    <span><%= link_to book.destroy, book_paht(book.id) %></span>
  <% end %>
</table>

<h2>New Book</h2>
<%= form_with model: @book, url:'/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>