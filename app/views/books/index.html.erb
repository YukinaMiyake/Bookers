<div class= "book-body">
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><span><%= link_to 'show', book_path(book.id) %></span></td>
          <td><span><%= link_to 'edit', book_path(book.id) %></span></td>
          <td><span><%= link_to 'destroy', book_path(book.id), method: :delete  %></span></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New Book</h2>

  <% if @book.errors.any? %>
    <div id ="error_explanation">
    <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book, url:'/books', method: :post do |f| %>
    <%= f.label :Title %>
    <div class="field">
      <%= f.text_field :title %>
    </div>

    <%= f.label :Body %>
    <div class="field">
      <%= f.text_area :body %>
    </div>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>