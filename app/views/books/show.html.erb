<% if flash[:notice] %>
  <p id ="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<h2>Title</h2>
<p><%= @book.title %></p>

<h2>Body</h2>
<p><%= @book.body %></p>

<%= link_to "Edit", book_edit_path(@book.id) %>
<%= link_to "Destroy", book_destroy_path(@book.id), method: :delete, "deta-confirm" => "Are you sure?" %>

